<!DOCTYPE html>
<html>
  <head>
    <% if current_user.nil? %>
      <button class="btn btn-info" class="font-weight-bold"><%= link_to "Log In", "/login", method: :get %></button>
      <button class="btn btn-info"><%= link_to "Register", "/register", method: :get %></button>
      <button class="btn btn-info"><%= link_to "Search for Adventures", "adventures/search", method: :get %></button>
    <% else %>
      <button class="btn btn-info"><%= link_to "Logout", "/logout", method: :delete %></button>
      <button class="btn btn-info"><%= link_to "Search for Adventures", "/adventures/search", method: :get %></button>
    <% end %>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>

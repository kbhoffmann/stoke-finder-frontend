<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Rec Area Info</title>
  </head>

  <body style="background-color:lightblue;">
  <body>
    <hr>
    <div class="container text-center">
      <h1 class="page-header text-primary"><%= @area.name %></h1>
        <p class="lead"><%=strip_tags(@area.description) %></p>
        <p>Fees: <small><%=@area.fee %></small></p>
        <p>Email: <small><%=@area.email %></small></p>
        <p>Phone number: <small><%=@area.phone %></small></p>
    </div>


    <div class="container text-wrap" style="width: 50rem; float:left; margin:75px">
      <h3>Activities for <%= @area.name %>: </h3>
        <% @all_activities.each do |activity| %>
          <h3><%= activity.name %></h3>
          <p>Description: <%= activity.description %></p>
          <p>Fee: <%= activity.fee %></p>
        <% end %>
    </div>

    <div class= "container text-wrap" style="width: 50rem; float:right; margin:75px">
      <h3>Weather for <%= @area.name %></h3>
        <p>Current Temperature: <%= @forecast.temp.round %>&deg;F</p>
        <p>Feels Like: <%=@forecast.feels_like_temp.round %>&deg;F</p>
        <p>Conditions: <%= @forecast.description.capitalize %></p>
        <p><%= image_tag "http://openweathermap.org/img/wn/#{@forecast.icon_number}.png", size: "150" %></p>
        <p>Humidity: <%=@forecast.humidity%> % </p>
        <p>Wind Speed: <%=@forecast.wind_speed_mph%> mph </p>
        <p>UV Index: <%=@forecast.uv_index%></p>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
